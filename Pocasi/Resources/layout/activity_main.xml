<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="#009BCD">
	<ImageView
		android:layout_marginTop="25dp"
		android:src="@android:drawable/ic_menu_gallery"
		android:layout_width="100dp"
		android:layout_height="100dp"		android:layout_gravity="center_horizontal"
		android:id="@+id/imageViewPicture" />
	<TextView
		android:layout_marginTop="10dp"
		android:text="City"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="30sp"
		android:gravity="center_horizontal"
		android:id="@+id/textViewCity" />


	<LinearLayout
		android:layout_marginTop="30dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<TextView
			android:text="Weather:"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:minWidth="25px"
			android:minHeight="25px"
			android:textSize="20sp"
			android:layout_marginLeft="40dp"
			android:id="@+id/textView1" />
		<TextView
			android:text="Text"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:textSize="20sp"
			android:id="@+id/textViewWeather"
			android:layout_marginLeft="126dp" />	
	</LinearLayout>


	<LinearLayout
		android:layout_marginTop="10dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
        <TextView
            android:text="Temperature:"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="25px"
            android:minHeight="25px"
            android:textSize="20sp"
            android:layout_marginLeft="40dp"
            android:id="@+id/textView2"
            android:layout_marginRight="0.0dp" />
		<TextView
			android:text="Text"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:textSize="20sp"
			android:id="@+id/textViewTemperature"
			android:layout_marginLeft="85dp" />	
	</LinearLayout>


	<LinearLayout
		android:layout_marginTop="10dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
        <TextView
            android:text="Wind:"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="25px"
            android:minHeight="25px"
            android:textSize="20sp"
            android:layout_marginLeft="40dp"
            android:id="@+id/textView3"
            android:layout_marginRight="0.0dp" />
		<TextView
			android:text="Text"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:textSize="20sp"
			android:id="@+id/textViewWind"
			android:layout_marginLeft="154dp" />	
	</LinearLayout>


	<LinearLayout
		android:layout_marginTop="10dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
        <TextView
            android:text="Humidity:"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="25px"
            android:minHeight="25px"
            android:textSize="20sp"
            android:layout_marginLeft="40dp"
            android:id="@+id/textView4"
            android:layout_marginRight="0.0dp" />
		<TextView
			android:text="Text"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:textSize="20sp"
			android:id="@+id/textViewHumidity"
			android:layout_marginLeft="120dp" />	
	</LinearLayout>


	<LinearLayout
		android:layout_marginTop="10dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
        <TextView
            android:text="Local time:"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="25px"
            android:minHeight="25px"
            android:textSize="20sp"
            android:layout_marginLeft="40dp"
            android:id="@+id/textView5"
            android:layout_marginRight="0.0dp" />
		<TextView
			android:text="Text"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:textSize="20sp"
			android:id="@+id/textViewLocalTime"
			android:layout_marginLeft="107dp" />	
	</LinearLayout>


	<LinearLayout
		android:layout_marginTop="10dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
        <TextView
            android:text="Sunrise:"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="25px"
            android:minHeight="25px"
            android:textSize="20sp"
            android:layout_marginLeft="40dp"
            android:id="@+id/textView6"
            android:layout_marginRight="0.0dp" />
		<TextView
			android:text="Text"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:textSize="20sp"
			android:id="@+id/textViewSunrise"
			android:layout_marginLeft="133dp" />	
	</LinearLayout>


	<LinearLayout
		android:layout_marginTop="10dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
        <TextView
            android:text="Sunset:"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="25px"
            android:minHeight="25px"
            android:textSize="20sp"
            android:layout_marginLeft="40dp"
            android:id="@+id/textView7"
            android:layout_marginRight="0.0dp" />
		<TextView
			android:text="Text"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:textSize="20sp"
			android:id="@+id/textViewSunset"
			android:layout_marginLeft="139dp" />	
	</LinearLayout>
    <Button
        android:text="Change The City"
        android:layout_width="250dp"
		android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:id="@+id/buttonChange"
		android:layout_marginTop="40dp"
		android:backgroundTint="#113377"
		
		/>


</LinearLayout>